{
  "name": "@weavlet/factsheet",
  "version": "0.0.1",
  "description": "Schema-driven, deterministic fact storage with LLM extraction.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "ai",
    "llm",
    "memory",
    "user-profile",
    "factsheet",
    "state-management",
    "zod",
    "schema"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/weavlet/weavlet"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "peerDependencies": {
    "zod": "^3.20.0",
    "pg": "^8.0.0",
    "ioredis": "^5.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": false
    },
    "pg": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    }
  },
  "dependencies": {
    "pg-format": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.9.4",
    "@types/pg": "^8.11.10",
    "@types/pg-format": "^1.0.5",
    "ioredis": "^5.4.1",
    "pg": "^8.13.1",
    "tsup": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15",
    "zod": "^3.23.8"
  }
}